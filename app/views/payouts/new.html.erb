<div class="container-md">
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-6">
            <%= form_for(user_payouts_path(user_id: params[:user_id]), data: { turbo: false }, remote: true) do |form|
                %>
                <div class="form-group">
                    <%= form.label :amount %>
                        <%= form.text_field :name, {class: 'form-control' } %>
                </div>
                <div class="form-group">
                    <%= form.label :recipient_code %><br>
                        <%= form.text_field :recipient_code, {class: 'form-control' } %> <br>
                </div>
                <div class="form-group">
                    <%= form.label :reason %><br>
                        <%= form.text_field :reason, {class: 'form-control' } %> <br>
                </div>
                <%= form.submit %>
                    <% end %>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>